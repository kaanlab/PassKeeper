<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PassKeeper.Desktop.Views.PasswordsView">
  
  <StackPanel>
    <TextBlock
          Text="Колличество букв из каждого слова"
          Classes="header" />
    <ComboBox SelectedIndex="0">
      <ComboBoxItem>3</ComboBoxItem>
      <ComboBoxItem>4</ComboBoxItem>
    </ComboBox>  

    <CheckBox>Добавить цифры в начало пароля</CheckBox>
    <ComboBox SelectedIndex="0">
      <ComboBoxItem>2</ComboBoxItem>
      <ComboBoxItem>3</ComboBoxItem>
      <ComboBoxItem>4</ComboBoxItem>
    </ComboBox>
    
    <CheckBox>Использовать заглавные буквы в начале слов</CheckBox>

    <TextBlock
          Text="Количество создаваемых паролей"
          Classes="header" />
    <NumericUpDown Minimum="1" Maximum="1000" Increment="1" Width="100" HorizontalAlignment="Left" HorizontalContentAlignment="Right" />
    <Button>Создать пароли</Button>
  </StackPanel>
  
</UserControl>
